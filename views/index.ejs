<%- include('components/banner', { title: 'Listado de Traducciones' }) %>

<div class="mb-3">
  <a href="/agregar" class="btn btn-success">Agregar Nueva Traducción</a>
</div>
<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th>Palabra</th><th>Traducción</th><th>Pronunciación</th><th>Categoría</th><th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% lista.forEach((traduccion) => { %>
      <tr>
        <td><%= traduccion.palabra %></td>
        <td><%= traduccion.traduccion %></td>
        <td><%= traduccion.pronunciacion %></td>
        <td><%= traduccion.categoria %></td>
        <td>
          <a href="/editar/<%= traduccion.id %>" class="btn btn-sm btn-warning">Editar</a>
          <a href="/eliminar/<%= traduccion.id %>" class="btn btn-sm btn-danger">Eliminar</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('components/footer') %>
